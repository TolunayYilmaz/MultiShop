@model List<ECommerceViewModel.Product>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Başlığı</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Puanı</th>  
            <th>Ürün Detayları</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.product_id</td>
                <td>@item.product_title</td>
                @if (@item.typical_price_range is not null)
                {
                    <td>@item.typical_price_range.First()</td>
                    
                }
                else
                {
                    <td>Fiyat Bulunamadı</td>
                }
                <td>@item.product_rating</td>                
                <td><a href="#" class="btn btn-primary">Ürün Detayları</a></td>
            </tr>
        }
    </table>
</div>

