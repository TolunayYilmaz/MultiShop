@model MailRequest
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <br />
    <div class="alert alert-success"><h3> Mail Gonderme Sayfasi</h3> </div>
     <form method="post">
         <label> Alici Mail Adresi</label>
         <input type="text" asp-for="ReciverMail" class="form-control" />
