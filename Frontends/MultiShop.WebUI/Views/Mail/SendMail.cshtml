         <input type="text" asp-for="Subject" class="form-control" />
         <br />
         <label>Mail Icerigi </label>
         <textarea rows="5" class="form-control" asp-for="MessageContent"></textarea>
         <br />
        <button class="btn btn-primary">Gonder</button>
     </form>
</div>


